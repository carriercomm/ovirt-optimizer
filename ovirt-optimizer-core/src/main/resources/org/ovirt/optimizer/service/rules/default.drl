// PinToHostPolicyUnit - only check migrations, ignore starts
rule "pinToHost"
    when
        exists PolicyUnitEnabled(uuid == "12262ab6-9690-4bc3-a2b3-35573b172d54")
        $step: Migration(valid == true, start == false, $destination: destination)
        $host: Host(id == $destination.id)
        $vm : VM($vmId : id,
                 $step.getAssignment($vmId) == $host.id,
                 placementPolicy.host != $host,
                 placementPolicy.affinity != "migratable")
        RunningVm(id == $vmId)
    then
        scoreHolder.addHardConstraintMatch(kcontext, -1);
end

